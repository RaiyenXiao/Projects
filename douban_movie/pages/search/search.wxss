/* pages/search/search.wxss */
.search-area{
  box-sizing: border-box;
  position: relative;
  margin: 20rpx;
}
.search-area .search-txt{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: block;
  box-sizing: border-box;
  border: 1px solid #ddd;
  font-size: 24rpx;
  padding-left: 20rpx;
  border-radius: 10rpx;
}
.search-area .search-btn{
  position: absolute;
  width: 120rpx;
  right: 0;
  top: 0;
  z-index: 2;
  font-size: 28rpx;
  height: 80rpx;
  border: 1px solid #ddd;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;

}
.search-area .search-btn::after{
  border: none;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
.search-tag{
  padding: 0 20rpx;
  color: #333;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.search-tag .search-tag-title{
  font-size: 32rpx;
}
.search-tag .search-item{
  color: #999;
  border: 1px solid #999;
  display: inline-block;
  padding: 6rpx 8rpx;
  border-radius: 6rpx;
  margin: 20rpx 20rpx 0 0;
}